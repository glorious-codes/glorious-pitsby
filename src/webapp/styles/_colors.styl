:root {
  // LIGHT COLOR SCHEME
  --pitsby-c-grey-light: #FCFCFC;
  --pitsby-c-grey-semi-light: #F5F5F5;
  --pitsby-c-grey: #C6C6C6;
  --pitsby-c-grey-semi-dark: #B4B4B4;
  --pitsby-c-grey-dark: #737C84;
  --pitsby-c-blue-light: #E9F1FB;
  --pitsby-c-blue: #6699FF;
  --pitsby-c-blue-semi-dark: #2E72FF;
  --pitsby-c-red-light: #FFF6F6;
  --pitsby-c-red-semi-light: #FBCCCC;
  --pitsby-c-red: #FC3338;
  --pitsby-c-red-semi-dark: #AC0F0F;
  --pitsby-c-lightest: #FFFFFF;
  --pitsby-c-darkest: #333333;
  // LIGHT SPECIFIC COLORS
  --pitsby-c-primary: var(--pitsby-c-blue);
  --pitsby-c-heading: var(--pitsby-c-darkest);
  --pitsby-c-paragraph: var(--pitsby-c-darkest);
  --pitsby-c-required-symbol: var(--pitsby-c-red);
  --pitsby-c-shadow: #CCCCCC;
}

[data-pitsby-color-scheme="dark"] {
  // DARK COLOR SCHEME
  color-scheme dark
  --pitsby-c-grey-light: #0F1217;
  --pitsby-c-grey-semi-light: #161A21;
  --pitsby-c-grey: #3E4859;
  --pitsby-c-grey-semi-dark: #42424B;
  --pitsby-c-grey-dark: #7B818C;
  --pitsby-c-blue-light: #062040;
  --pitsby-c-blue: #3060BF;
  --pitsby-c-blue-semi-dark: #6698FF;
  --pitsby-c-red-light: #400000;
  --pitsby-c-red-semi-light: #590000;
  --pitsby-c-red: #B30909;
  --pitsby-c-red-semi-dark: #E68A8A;
  --pitsby-c-lightest: #13161D;
  --pitsby-c-darkest: #CCCCCC;
  // DARK SPECIFIC COLORS
  --pitsby-c-primary: var(--pitsby-c-blue-semi-dark);
  --pitsby-c-heading: var(--pitsby-c-darkest);
  --pitsby-c-paragraph: #9CA3AF;
  --pitsby-c-required-symbol: var(--pitsby-c-red-semi-dark);
  --pitsby-c-shadow: #000000;
}

