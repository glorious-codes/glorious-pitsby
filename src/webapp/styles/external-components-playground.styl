@require '_variables'
@require '_mixins'

tabs-content-height()
  height calc(100vh - 48px)

tabs-content-height-mobile()
  height calc(100vh - 108px)

original-transclude-attrs()
  display inherit
  height auto

.p-external-components-playground
  &.p-external-components-playground-padding
    p-external-component-preview
      padding 30px
      box-sizing border-box
  .p-tabs-bar-item
    padding 15px 0
    min-width 100px
    text-align center
  .p-tabs-content
    padding 0
    tabs-content-height()
  .p-external-component-preview
    height 100%
    ng-transclude
      original-transclude-attrs()
  p-tab, .p-tab, p-code-editor, .p-code-editor
    tabs-content-height()
  p-external-component-preview
    display block
    height 100%
  ng-transclude
    display block
    tabs-content-height()

.p-external-components-playground-editor
  tabs-content-height()

+breakpoint('xs')
  .p-external-components-playground
    height calc(100vh - 60px)
    .p-tabs-bar-items-container
      display flex
      justify-content center
      width 100%
    .p-tabs-bar-item
      min-width 0
      width 25%
    .p-tabs-content
      padding 0
      tabs-content-height-mobile()
    p-tab, .p-tab, p-code-editor, .p-code-editor
      tabs-content-height-mobile()
    ng-transclude
      display block
      tabs-content-height-mobile()
    .p-external-component-preview
      ng-transclude
        original-transclude-attrs()
  .p-external-components-playground-editor
    tabs-content-height-mobile()
