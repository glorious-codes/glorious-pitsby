@require '_variables'
@require '_mixins'
@require 'row-item-variables'

.p-row-item
  float left
  padding 0 $row-item-padding
  box-sizing border-box
  input,
  textarea
    width 100%

.p-row-item-label,
.p-row-item-value
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

.p-row-item-label
  margin-bottom 5px
  color $color-grey-semi-dark
  font-size $font-size-xxs

for $size in (1..$row-item-max-size)
  .p-row-item-size-{$size}
    width ($size/$row-item-max-size) * 100%

+breakpoint('xs')
  .p-row-item
    float left
    width 100%
  & + .p-row-item
    margin-top 12px
  .p-row-item
    width 100%
