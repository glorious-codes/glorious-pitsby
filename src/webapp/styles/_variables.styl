// COLORS
$color-grey-light = var(--pitsby-c-grey-light)
$color-grey-semi-light = var(--pitsby-c-grey-semi-light)
$color-grey = var(--pitsby-c-grey)
$color-grey-semi-dark = var(--pitsby-c-grey-semi-dark)
$color-grey-dark = var(--pitsby-c-grey-dark)
$color-green-light = var(--pitsby-c-green-light)
$color-green-semi-light = var(--pitsby-c-green-semi-light)
$color-green = var(--pitsby-c-green)
$color-blue-light = var(--pitsby-c-blue-light)
$color-blue = var(--pitsby-c-blue)
$color-blue-semi-dark = var(--pitsby-c-blue-semi-dark)
$color-red-light = var(--pitsby-c-red-light)
$color-red-semi-light = var(--pitsby-c-red-semi-light)
$color-red = var(--pitsby-c-red)
$color-red-semi-dark = var(--pitsby-c-red-semi-dark)
$color-yellow-light = var(--pitsby-c-yellow-light)
$color-yellow-semi-light = var(--pitsby-c-yellow-semi-light)
$color-yellow = var(--pitsby-c-yellow)
$color-orange = var(--pitsby-c-orange)
$color-purple = var(--pitsby-c-purple)
$color-clay = var(--pitsby-c-clay)
$color-lightest = var(--pitsby-c-lightest)
$color-darkest = var(--pitsby-c-darkest)

$color-primary = var(--pitsby-c-primary)

// FONT
$font-size-xxxxs = 0.5rem   // 08px
$font-size-xxxs = 0.625rem  // 10px
$font-size-xxs = 0.75rem    // 12px
$font-size-xs = 0.875rem    // 14px
$font-size-sm = 1rem        // 16px
$font-size-md = 1.125rem    // 18px
$font-size-lg = 1.25rem     // 20px
$font-size-xl = 1.5rem      // 24px
$font-size-xxl = 2.25rem    // 36px
$font-size-xxxl = 3rem      // 48px

$font-family-primary = 'Inter', Helvetica, Arial, sans-serif
$font-family-secondary = 'PT Mono', monospace;

// LAYERS
$layer-base = 1
$layer-lowest = 10
$layer-low = 20
$layer-middle = 30
$layer-high = 40
$layer-highest = 50

// PATHS
$path-images = '/images/'

// ANIMATION
$animation-curve-default = cubic-bezier(0.080, 0.690, 0.485, 0.990)

// BREAKPOINTS
$screen-xs-max = 767px
$screen-sm-min = 768px
$screen-sm-max = 1024px
$screen-md-min = 1025px
$screen-md-max = 1439px
$screen-lg-min = 1440px
