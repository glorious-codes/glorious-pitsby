// COLORS
$color-grey-light = #F1F1F1
$color-grey-semi-light = #E9EAEB
$color-grey = #C9D3DD
$color-grey-semi-dark = #B1B4B7
$color-grey-dark = #737C84

$color-blue-light = #B8DCFF
$color-blue = #69A3FF
$color-blue-dark = #222A46

$color-green-light = #C8FFC8
$color-green = #00D082
$color-green-dark = #00AE6D

$color-red-light = #FFA086
$color-red = #ED1946
$color-red-dark = #CF1946

$color-orange-light = #FFC896
$color-orange = #FF9632
$color-orange-dark = #F78900

$color-yellow-light = #FFFFC8
$color-yellow = #FFFF8C
$color-yellow-dark = #B3B300

$color-lightest = #FFFFFF
$color-darkest = #333333

$color-mango = #8C73C8

$color-primary = $color-mango

// FONT
$font-size-xxxs = 0.625rem  // 10px
$font-size-xxs = 0.75rem    // 12px
$font-size-xs = 0.875rem    // 14px
$font-size-sm = 1rem        // 16px
$font-size-md = 1.125rem    // 18px
$font-size-lg = 1.25rem     // 20px
$font-size-xl = 1.5rem      // 24px
$font-size-xxl = 2.25rem    // 36px
$font-size-xxxl = 3rem      // 48px

$font-family-primary = 'Helvetica', 'Arial', sans-serif

// LAYERS
$layer-base = 1
$layer-lowest = 10
$layer-low = 20
$layer-middle = 30
$layer-high = 40
$layer-highest = 50

// PATHS
$path-images = '/images/'

// ANIMATION
$animation-curve-default = cubic-bezier(0.080, 0.690, 0.485, 0.990)

// BREAKPOINTS
$screen-xs-max = 767px
$screen-sm-min = 768px
$screen-sm-max = 1024px
$screen-md-min = 1025px
$screen-md-max = 1439px
$screen-lg-min = 1440px
