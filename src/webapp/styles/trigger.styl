@require '_variables'
@require '_mixins'

.p-trigger
  display flex
  align-items center
  justify-content center
  width 36px
  height 36px
  background-color transparent
  border 0
  cursor pointer
  transition(all, 300ms)
  -webkit-appearance none
  border-radius(4px)
  +highlight()
    background-color $color-grey-light
  p-icon
    display flex
  .p-icon
    background-color $color-grey-dark
